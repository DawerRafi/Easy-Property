<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="10dip" />
         <stroke android:width="2dip" android:color="#0099CC" />
         <gradient android:angle="-90" android:startColor="#4682B4" android:endColor="#689a92"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="2dip" android:color="#0099CC" />
         <solid android:color="#C3E4ED"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="10dip" />
         <stroke android:width="2dip" android:color="#0099CC" />
         <gradient android:angle="-90" android:startColor="#63B8FF" android:endColor="#C3E4ED" />            
     </shape>
 </item>
</selector>